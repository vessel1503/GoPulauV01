@model GoPulauV01.Models.CustomRegisterModel

@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm()) {
    <fieldset>
        <legend>Registration Form</legend>
        <div class="register-form">
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Name)
                </div>
                <div class="data-column-input">
                    @Html.TextBoxFor(m => m.MemberModel.Name, new { @placeholder = "@Example: Steve Job" })
                    @Html.ValidationMessageFor(m => m.MemberModel.Name)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Ic_Passport)
                </div>
                <div class="data-column-input">
                    @Html.TextBoxFor(m => m.MemberModel.Ic_Passport, new { @id = "txtIcPassport", @placeholder = "@Example: 990123-10-1234" })
                    @Html.ValidationMessageFor(m => m.MemberModel.Ic_Passport)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Gender)
                </div>
                <div class="data-column-input">
                    @Html.RadioButtonFor(m => m.MemberModel.Gender, "M", new { id = "radMemberGenderMale", @class = "radio-member-gender", name = "gender", Checked = "checked" })
                    @Html.Label("radMemberGenderMale", "Male")
                    @Html.RadioButtonFor(m => m.MemberModel.Gender, "F", new { id = "radMemberGenderFemale", @class = "radio-member-gender", name="gender" })
                    @Html.Label("radMemberGenderFemale", "Female")
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Dob)
                </div>
                <div class="data-column-input">
                    @Html.TextBoxFor(m => m.MemberModel.Dob, new { @id = "txtDOB", @placeholder = "@Example: DD/MM/YYYY" })
                    @Html.ValidationMessageFor(m => m.MemberModel.Dob)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Race)
                </div>
                <div class="data-column-input">
                    @Html.RadioButtonFor(m => m.MemberModel.Race, "Malay", new { id = "radMemberRaceMalay", name = "race", Checked = "checked" })
                    @Html.Label("radMemberRaceMalay", "Malay")
                    @Html.RadioButtonFor(m => m.MemberModel.Race, "Chinese", new { id = "radMemberRaceChinese", name="race" })
                    @Html.Label("radMemberRaceChinese", "Chinese")
                    @Html.RadioButtonFor(m => m.MemberModel.Race, "Indian", new { id = "radMemberRaceIndian", name = "race" })
                    @Html.Label("radMemberRaceIndian", "Indian")
                    @Html.RadioButtonFor(m => m.MemberModel.Race, "Others", new { id = "radMemberRaceOthers", name = "race" })
                    @Html.Label("radMemberRaceOthers", "Others")
                    @Html.ValidationMessageFor(m => m.MemberModel.Race)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Religion)
                </div>
                <div class="data-column-input">
                    @Html.DropDownListFor(m => m.MemberModel.Religion, new List<SelectListItem>{
                                        new SelectListItem { Text="Islam", Value="ISL" },
                                        new SelectListItem { Text="Buddhism", Value="BUD" },
                                        new SelectListItem { Text="Hinduism", Value="HIN" },
                                        new SelectListItem { Text="Others", Value="OTH" },
                    }, "Select Religion")
                    @Html.ValidationMessageFor(m => m.MemberModel.Religion)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Occupation)
                </div>
                <div class="data-column-input">
                    @Html.TextBoxFor(m => m.MemberModel.Occupation, new { @placeholder = "@Example: Student" })
                    @Html.ValidationMessageFor(m => m.MemberModel.Occupation)
                </div>               
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Address)
                </div>
                <div class="data-column-input">
                    @Html.TextBoxFor(m => m.MemberModel.Address, new { @placeholder = "@Example: A-03-04 Jalan Satu, Taman Baru." })
                    @Html.ValidationMessageFor(m => m.MemberModel.Address)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.PostalCode)
                </div>
                <div class="data-column-input">
                    @Html.TextBoxFor(m => m.MemberModel.PostalCode, new { @placeholder = "@Example: 99999" })
                    @Html.ValidationMessageFor(m => m.MemberModel.PostalCode)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.State)
                </div>
                <div class="data-column-input">
                    @Html.DropDownListFor(m => m.MemberModel.State, new List<SelectListItem>{
                                        new SelectListItem { Text="Johor", Value="JHR" },
                                        new SelectListItem { Text="Kedah", Value="KDH" },
                                        new SelectListItem { Text="Kelantan", Value="KLT" },
                                        new SelectListItem { Text="Kuala Lumpur", Value="KUL", Selected=true },
                                        new SelectListItem { Text="Melaka", Value="MLK" },
                                        new SelectListItem { Text="Pahang", Value="PHG" },
                                        new SelectListItem { Text="Penang", Value="PNG" },
                                        new SelectListItem { Text="Perak", Value="PRK" },
                                        new SelectListItem { Text="Perlis", Value="PLS" },
                                        new SelectListItem { Text="Sabah", Value="SBH" },
                                        new SelectListItem { Text="Sarawak", Value="SRW" },
                                        new SelectListItem { Text="Selangor", Value="SLG" },
                                        new SelectListItem { Text="Seremban", Value="SRB" },
                                        new SelectListItem { Text="Terengganu", Value="TRG" }
                    }, "Select State")
                    @Html.ValidationMessageFor(m => m.MemberModel.State)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.Country)
                </div>
                <div class="data-column-input">
                    @Html.DropDownListFor(m => m.MemberModel.Country, new List<SelectListItem>{
                                        new SelectListItem { Text="Malaysia", Value="MAL", Selected=true},
                                        //new SelectListItem { Text="Singapore", Value="SGR" },
                                        //new SelectListItem { Text="Thailand", Value="TAI" },
                    }, "Select Country")
                    @Html.ValidationMessageFor(m => m.MemberModel.Country)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.MemberModel.PhoneNo)
                </div>
                <div class="data-column-input">
                    @Html.TextBoxFor(m => m.MemberModel.PhoneNo, new { @id = "txtPhoneNo", @placeholder = "@Example: 012-1234567" })
                    @Html.ValidationMessageFor(m => m.MemberModel.PhoneNo)
                </div>                
            </div>
            <br />
            <hr />
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.LoginModel.UserName)
                </div>
                <div class="data-column-input">
                    @Html.TextBoxFor(m => m.LoginModel.UserName, new { @placeholder = "@Example: abc123@hotmail.com" })
                    @Html.ValidationMessageFor(m => m.LoginModel.UserName)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.LoginModel.Password)
                </div>
                <div class="data-column-input">
                    @Html.PasswordFor(m => m.LoginModel.Password, new { @placeholder = "@Example: Password" })
                    @Html.ValidationMessageFor(m => m.LoginModel.Password)
                </div>                
            </div>
            <div class="data-row">
                <div class="data-column-title">
                    @Html.LabelFor(m => m.LoginModel.ConfirmPassword)
                </div>
                <div class="data-column-input">
                    @Html.PasswordFor(m => m.LoginModel.ConfirmPassword,  new { @placeholder = "@Example: Password" })
                    @Html.ValidationMessageFor(m => m.LoginModel.ConfirmPassword)
                </div>                
            </div>
        </div>
        <input type="submit" value="Register" />
    </fieldset>
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary()*@
}

