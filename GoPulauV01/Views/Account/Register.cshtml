    input[type=text]{
        margin:0px;
    }
    input[type=password]{
        margin:0px;
    }


    .radio-member-gender{

    }

    .register-form{
        font-size:14px;
        font-family:'Segoe UI'
    }
    .data-row{
        position:relative;
        width:100%;
        height:35px;
    }
    .data-column-title{
        width:30%;
        position:relative;
        float:left;
        padding:1px 0px;
    }
    .data-column-input{
        width:70%;
        position:relative;
        float:left;
        padding:1px 0px;
    }
</style>

<script type="text/javascript">
    $("#txtDOB").mask("99/99/9999", { clearIfNotMatch: true });
    $("#txtDOB").datepicker();//"option", "showAnim", "blind");//{ minDate: -20, maxDate: "+1M +10D" });
    $("#txtIcPassport").mask('999999-99-9999');
</script>